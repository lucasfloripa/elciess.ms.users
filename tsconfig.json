{
  "compilerOptions": {
    "strictNullChecks": true,
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "@/*": ["src/*"],
      "@tests/*": ["tests/*"]
    },
    "typeRoots": ["src/@types", "node_modules/@types"]
  },
  "include": [
    "src",
    "tests",
    "config",
    "lint-staged.config.ts"
  ],
  "exclude": ["node_modules"]
}